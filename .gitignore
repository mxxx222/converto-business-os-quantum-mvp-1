# ignore everything by default
*

# allow only these roots
!.gitignore
!README.md
!requirements.txt
!pyproject.toml
!start_backend.sh
!start_frontend.sh
!.pre-commit-config.yaml

# allow code dirs
!app/
!frontend/
!scripts/
!frontend/.nvmrc
!app/static/

# inside allowed dirs, re-ignore heavy junk
app/**/node_modules/
app/**/.venv/
app/**/__pycache__/
app/**/dist/
app/**/build/
frontend/**/node_modules/
frontend/**/.turbo/
frontend/**/.next/
frontend/**/dist/
frontend/**/build/
scripts/**/.venv/
scripts/**/__pycache__/
*.log
.DS_Store

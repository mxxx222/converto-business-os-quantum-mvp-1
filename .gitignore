# ignore everything by default
*

# allow only these roots
!.gitignore
!README.md
!requirements.txt
!pyproject.toml
!start_backend.sh
!start_frontend.sh
!scripts/push_to_github.sh
!.pre-commit-config.yaml
!package-mcp.json
!mcp_*.js
!mcp_*.json
!AUTO_DEPLOY_MCP_GUIDE.md
!test_mcp_*.sh

# allow code dirs
!backend/
!backend/**
!frontend/
!frontend/app/
!frontend/app/**
!scripts/
!frontend/.nvmrc
!frontend/next.config.js
!frontend/Dockerfile
!frontend/tsconfig.json
!app/static/

# inside allowed dirs, re-ignore heavy junk
app/**/node_modules/
app/**/.venv/
app/**/__pycache__/
app/**/dist/
app/**/build/
frontend/**/node_modules/
frontend/**/.turbo/
frontend/**/.next/
frontend/**/dist/
frontend/**/build/
scripts/**/.venv/
scripts/**/__pycache__/
*.log
.DS_Store
.vercel

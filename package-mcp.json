  "name": "converto-mcp-servers",
  "version": "1.0.0",
  "description": "MCP Servers for Converto Business OS - Render, GitHub, Auto Deploy, and more",
  "type": "module",
  "scripts": {
    "render": "node mcp_render_server.js",
    "github": "node mcp_github_server.cjs",
    "auto-deploy": "node mcp_auto_deploy_server.js",
    "notion": "node mcp_notion_server.js",
    "openai": "node mcp_openai_server.js",
    "resend": "node mcp_resend_server.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "mcpServers": {
    "render-tools": {
      "command": "node",
      "args": ["mcp_render_server.js"],
      "env": {
        "RENDER_API_KEY": "${RENDER_API_KEY}"
      }
    },
    "github-tools": {
      "command": "node",
      "args": ["mcp_github_server.cjs"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "auto-deploy-tools": {
      "command": "node",
      "args": ["mcp_auto_deploy_server.js"],
      "env": {
        "RENDER_API_KEY": "${RENDER_API_KEY}",
        "GITHUB_TOKEN": "${GITHUB_TOKEN}",
        "VERCEL_TOKEN": "${VERCEL_TOKEN}"
      }
    },
    "notion-tools": {
      "command": "node",
      "args": ["mcp_notion_server.js"],
      "env": {
        "NOTION_TOKEN": "${NOTION_TOKEN}"
      }
    },
    "openai-tools": {
      "command": "node",
      "args": ["mcp_openai_server.js"],
      "env": {
        "OPENAI_API_KEY": "${OPENAI_API_KEY}"
      }
    },
    "resend-tools": {
      "command": "node",
      "args": ["mcp_resend_server.js"],
      "env": {
        "RESEND_API_KEY": "${RESEND_API_KEY}"
      }
    }
  }
}
